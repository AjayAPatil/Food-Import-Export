@{
    Layout = "_Layout";
}


<div id="alertbox" class="food-alert-box">
    <span class="food-alert-closebtn" onclick="hideMsg()">&times;</span>
    <span id="alertbox-msg"></span>
</div>
<!-- The Modal -->
<div id="ImgModal" class="img-modal">
    <span class="img-modal-close" onclick="this.parentElement.style.display = 'none';">&times;</span>
    <img class="img-modal-content" id="ImgModalImg">
    <div id="ImgModalcaption" class="img-modal-caption"></div>
</div>

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#foodModal" hidden id="launch-modal-btn">
    Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="foodModal" tabindex="-1" role="dialog" aria-labelledby="foodModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content" id="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="foodModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" hidden id="modal-save-btn">Save changes</button>
            </div>
        </div>
    </div>
</div>

