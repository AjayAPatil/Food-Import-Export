@{
    ViewData["Title"] = "Admin Dashboard";
}

<section class="ftco-section ftco-no-pb ftco-no-pt bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="row">
                    <div class="col-md-12">
                        <a href="/Admin?uaction=new" class="button"> <span class="icon-plus"></span> Add New</a>
                    </div>
                    <div class="col-md-12">
                        <table class="table-bordered table-product">
                            <tr>
                                <th>Action</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>M.R.P.</th>
                                <th>Sale Price</th>
                            </tr>
                            @for (int i = 0; i < Model.Products.Count; i++)
                            {
                                <tr onclick="document.getElementById('viewrow').click();" class="@(@Model.Products[i].IsActive == true ? "table-product-active": "")">
                                    <td>
                                        <a href="/Admin?uaction=edit&id=@Model.Products[i].ProductId"> <span class="icon-edit"></span> </a>
                                        <a hidden id="viewrow" href="/Admin?uaction=view&id=@Model.Products[i].ProductId"> <span class="icon-edit"></span> </a>
                                    </td>
                                    <td>@Model.Products[i].ProductName</td>
                                    <td>@Model.Products[i].Description</td>
                                    <td>@Model.Products[i].MRPrice</td>
                                    <td>@Model.Products[i].SalePrice</td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                @*  @if (@Model.CurrentProduct != null)
                { *@
                <div class="col-md-12 d-flex align-items-center">
                    <div class="bg-white p-5 product-form">
                        <div class="form-group">
                            <input type="text" @(@Model.Action == "view" ? "disabled" : "") title="Product Name" value="@Model.CurrentProduct?.ProductName" name="productname" id="productname" class="form-control" placeholder="Product Name" />
                        </div>
                        <div class="form-group">
                            <input type="text" @(@Model.Action == "view" ? "disabled" : "") title="Description" value="@Model.CurrentProduct?.Description" name="description" id="description" class="form-control" placeholder="Description" />
                        </div>
                        <div class="form-group">
                            <input type="number" @(@Model.Action == "view" ? "disabled" : "") title="MRP" value="@Model.CurrentProduct?.MRPrice" name="mrp" id="mrp" class="form-control" placeholder="M.R.P." />
                        </div>
                        <div class="form-group">
                            <input type="number" @(@Model.Action == "view" ? "disabled" : "") title="Sale Price" value="@Model.CurrentProduct?.SalePrice" name="saleprice" id="saleprice" class="form-control" placeholder="Sale Price" />
                        </div>
                        <div class="form-group" @(@Model.Action == "view" ? "hidden" : "")>
                            <input type="submit" onclick="submitdata()" value="Save" class="btn btn-primary py-3 px-5">
                        </div>
                    </div>
                </div>
                @* } *@
            </div>
        </div>
    </div>
</section>

<script>
    window.onload = function () {
        var user = localStorage.getItem("UserInfo");
        if (user) {
            var userdata = JSON.parse(user);
            if (userdata.role != "Admin") {
                location.href = "User/LoginPage";
            }
        } else {
            location.href = "User/LoginPage";
        }
    }

    function submitdata() {
        var user = localStorage.getItem("UserInfo");
        var userdata = JSON.parse(user);
        var data = {
            ProductId: @Model.CurrentProduct?.ProductId,
            CreatedBy: userdata.userId,
            Images: '/images/product-12.jpg',
            ProductName: $('#productname').val(),
            Description: $('#description').val(),
            MRPrice: $('#mrp').val(),
            SalePrice: $('#saleprice').val(),
            IsDeleted: false,
            IsActive: false
        };

        $.post("/Admin/SaveProduct", { product: data })
            .done(function (res) {
                console.log(JSON.stringify(res))
                if (res?.status == "success") {
                    alert(res.message);

                    location.reload();
                } else if (res?.status == "fail") {
                    alert(res.message);
                } else {
                    alert("error");
                }
            })
            .fail(function () {
                alert("error!");
            });
    }
</script>